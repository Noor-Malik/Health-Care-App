<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4163ce"
    android:orientation="vertical"
    tools:context=".profileDoc">

    <TextView
        android:id="@+id/are_you_doctor"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/search_view"
        android:backgroundTint="@color/white"
        android:elevation="5dp"
        android:fitsSystemWindows="false"
        android:padding="12dp"
        android:text="Are you a doctor?"
        android:textAlignment="center" />
    

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="@color/white"
                android:elevation="5dp"
                android:padding="12dp"
                android:text="Let us know if you want to display your information as doctor or want us to edit it. We will be happy to help"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/search_view"
                android:backgroundTint="@color/white"
                android:elevation="5dp"
                android:hint="Enter name"
                android:padding="12dp" />

            <EditText
                android:id="@+id/hospital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/search_view"
                android:backgroundTint="@color/white"
                android:elevation="5dp"
                android:hint="Enter Hospital name include city"
                android:padding="12dp" />

            <EditText
                android:id="@+id/cetCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/search_view"
                android:backgroundTint="@color/white"
                android:elevation="5dp"
                android:hint="Enter City"
                android:padding="12dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/speciality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/search_view"
                android:backgroundTint="@color/white"
                android:elevation="5dp"
                android:hint="Speciality"
                android:padding="12dp" />

            <EditText
                android:id="@+id/pkr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/search_view"
                android:backgroundTint="@color/white"
                android:elevation="5dp"
                android:hint="Fees"
                android:padding="12dp" />

            <EditText
                android:id="@+id/years"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/search_view"
                android:backgroundTint="@color/white"
                android:elevation="5dp"
                android:hint="Experience year"
                android:padding="12dp" />

            <EditText
                android:id="@+id/limit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/search_view"
                android:backgroundTint="@color/white"
                android:elevation="5dp"
                android:hint="Wait time"
                android:padding="12dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="153dp"
                android:layout_margin="12dp"
                android:background="#7CB342"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="12dp"
                        android:padding="5dp"
                        android:text="@string/patient"
                        android:textAlignment="center"
                        android:textColor="#202C14"
                        android:textSize="22sp" />
                   
                    <RadioGroup
                        android:id="@+id/radiogroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="125dp"
                            android:text="Yes" />

                        <RadioButton
                            android:id="@+id/no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No"
                            android:layout_toEndOf="@id/yes"/>
                    </RadioGroup>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sub_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@drawable/search_nav"
                android:backgroundTint="#ffffff"
                android:text="Submit"
                android:textSize="18dp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/see_your_appointment"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@drawable/search_nav"
                android:backgroundTint="#ffffff"
                android:text="Submit"
                android:textSize="18dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
